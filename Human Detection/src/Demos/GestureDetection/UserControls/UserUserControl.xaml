<UserControl x:Class="Kinect.GestureDetection.UserControls.UserUserControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d">
	<Canvas>
		<StackPanel DockPanel.Dock="Bottom">
			<TextBlock Text="{Binding Classification}" FontSize="40" Foreground="Aquamarine" FontStyle="Normal" FontWeight="Bold" />
			<TextBlock Text="{Binding Sequence}" FontSize="20" Foreground="Yellow" FontStyle="Normal" FontWeight="Bold" />
		</StackPanel>
		<TextBlock Text="{Binding Direction}" Canvas.Left="{Binding RightHand.X}" Canvas.Top="{Binding RightHand.Y}" FontSize="40" Foreground="Red" FontStyle="Normal" FontWeight="Bold" />
	</Canvas>
</UserControl>